<%= form_with url: "/states/#{@state.id}/parks", method: :post, local: true do |form| %>
  <div class="form-control" align="center" style="background-color: #555543">
    <div class="form-control" align="center" >
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <br>
    <div class="form-control" align="center" >
      <%= check_box_tag(:camping_allowed) %>
      <%= label_tag(:camping_allowed, "Park allows camping") %>
    </div>
    <br>
    <div class="form-control" align="center" >
      <%= check_box_tag(:kayaking_available) %>
      <%= label_tag(:kayaking_available, "Kayaking is available here") %>
    </div>
    <br>
    <div class="form-control" align="center" >
      <%= form.label :park_rating, "Park rating out of 5" %>
      <%= form.text_field :park_rating %>
    </div>
    <br/>
    <div class="form-group" align="center" >
      <%= form.submit "New Park in #{@state.name}" %>
    </div>
  </div>
<% end %>
