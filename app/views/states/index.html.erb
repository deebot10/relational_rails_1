<h1 style="text-align: center"><img src='https://i.etsystatic.com/21069375/r/il/713211/3017011160/il_1140xN.3017011160_bbxr.jpg' alt="States" height=60% width=60% </h1><br/>
<div style="text-align:center">
  <a class="btn btn-success" href="/states/new">New State</a>
</div>
<% @states.order_created_at.each do |state| %>
<br/>
<div style="text-align:center">
  <a style="align: center" class="btn btn-secondary" href=<%="/states/#{state.id}"%>><%= "#{state.name}" %></a></h3>
</div>
<div style="text-align:center">
  <img src="https://i.pinimg.com/736x/5e/8f/37/5e8f3769652154c09064e81af4ea0f8a.jpg" height="2%" width="2%">
</div>
<br/>
<table class="table table-success table-striped table-hover">
  <tr>
    <td style="text-align: center">Region of Country: <%= state.region %></td>
  </tr>
    <% if state.military_discount == true %>
      <tr>
        <td style="text-align: center">It has a military discount for camping reservations!</td>
      </tr>
    <% else %>
      <tr>
        <td style="text-align: center">It does not have a military discount for camping reservations.</td>
      </tr>
    <% end %>
  <tr>
    <td style="text-align: center"><%= state.name %> has an environmental ranking of: <%= state.green_rank %></td>
  </tr>
  <tr>
    <td style="text-align: center">Number of Parks in this State: <%= state.parks_count %></td>
  </tr>
  <tr>
    <td style="text-align: center"><%= button_to "Edit #{state.name}", "/states/#{state.id}/edit", method: :get %></td>
  <tr>
    <td style="text-align: center"><%= button_to "Delete #{state.name}", "/states/#{state.id}", method: :delete, data: { confirm: "Are you sure? It's a crazy world out there." } %></td>

</table>
<br/>
<% end %>
